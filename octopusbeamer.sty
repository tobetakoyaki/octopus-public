% 複数ページに跨がる場合に(1/3)表示を出す
\newcounter{octopusb@framecont}
\setbeamertemplate{frametitle continuation}{%
    \setcounter{octopusb@framecont}{\beamer@endpageofframe}%
    \addtocounter{octopusb@framecont}{1}%
    \addtocounter{octopusb@framecont}{-\beamer@startpageofframe}%
    (\insertcontinuationcount/\arabic{octopusb@framecont})%
}

